<Page x:Class="Sommatif_1.View.FenetrePrincipale"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sommatif_1.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Background="Beige"
      Title="FenetrePrincipale">

    <WrapPanel Orientation="Vertical">
        <Button Content="Log out" HorizontalAlignment="Left" >
            
        </Button>
        <Label Content="Log"/>

        <ListView  ItemsSource="{Binding Etudiants}" SelectedItem="{Binding EtudiantSelectionne}" Width="143">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="User" DisplayMemberBinding="{Binding DA}" Width="auto"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Nom}" Width="auto"/>
                </GridView>
            </ListView.View>
        </ListView>
    </WrapPanel>
</Page>
